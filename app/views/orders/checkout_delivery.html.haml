.container.checkout
  =render "checkout_nav" 
  =form_tag set_delivery_orders_path, method: "put" do
    .row
      / .col-md-12
      /   -if @current_order.errors.any?
      /     %div.alert.alert-danger
      /       - @current_order.errors.full_messages.each do |msg|
      /         %div= "- " + msg
      .col-md-8
        %h2.margin-bot-add Delivery type
        .row
          .col-md-8
            -@delivery_types.each_with_index do |dt, i|
              .radio
                = radio_button_tag :delivery_type, dt.id, i==0 
                = "#{dt.title} + #{number_to_currency(dt.price)}"
      =render "order_summary"    
      .col-md-4.col-md-offset-8
        .form-group
          = submit_tag "Save and continue", class: "btn btn-success btn-lg"